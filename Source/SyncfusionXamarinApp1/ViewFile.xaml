<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncfusionXamarinApp1.ViewFile">
    <ContentPage.Content>
        <Grid RowSpacing="10"
              BackgroundColor="#363636">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="95*"/>
            </Grid.RowDefinitions>

            <Label BackgroundColor="#626568" Grid.Row="0" x:Name="PathLabel"
                   TextColor="#a2a4a6"/>
            
            <Label x:Name="ContLabel" Grid.Row="1"
                   TextColor="White"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>